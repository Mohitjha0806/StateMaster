@* @model List<StateMaster.Models.Entities.State> *@

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-center">
        <h1 class="text-center mb-4">All State</h1>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="d-none">ID</th>
                        <th>State Name English</th>
                        <th>State Name Hindi</th>
                        <th>State Name Code</th>
                        <th>Subscribed</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var state in Model)
                      {
                        <tr>
                            <td class="d-none">@state.Id</td>
                            <td>@state.StateNameEnglish</td>
                            <td>@state.StateNameHindi</td>
                            <td>@state.StateNameCode</td>
                            <td>@(state.Status ? "Yes" : "No")</td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-controller="State" asp-action="Edit" asp-route-id="@state.Id">
                                    Edit
                                </a>
                            </td>
                        </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
</div>

